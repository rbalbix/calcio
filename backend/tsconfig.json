{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers": [
        "./src/app/controllers"
      ],
      "@models": [
        "./src/app/models"
      ],
      "@config": [
        "./src/config"
      ],
      "@database": [
        "./src/database"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
